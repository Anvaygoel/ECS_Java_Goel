import java.util.Scanner;

public class DumbCalculator 
{
	public static void main(String[] args )
	{
		Scanner keyboard = new Scanner(System.in);
		
		double Fnum, Snum, Tnum ;
		
		
		
		System.out.println("let's find the average of a few number...");
		
		System.out.println("What is the first number?");
		Fnum = keyboard.nextDouble();
		
		System.out.println("What is the second number? ");
		Snum = keyboard.nextDouble();
		
		System.out.println("What is the third number?");
		Tnum = keyboard.nextDouble();
		
		System.out.println("The average of the three numbers is " + Fnum, Snum, Tnum );
		
		
		
		
		
	}

}
