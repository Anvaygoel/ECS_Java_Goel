import java.util.Random;

public class Dice 
{
	public static void main(String[] args)
	{
		Random r = new Random();
		
		int Roll =  r.nextInt(6);
		int Roll1 = Roll;
		
		System.out.println("HERE COMES THE DICE!");
		System.out.println(" Roll#1: " +  r.nextInt(6));
		
		System.out.println("Roll#2 : " +  r.nextInt(6));
		
		System.out.println("The Total is " + Roll1);
	
		
	}

}
